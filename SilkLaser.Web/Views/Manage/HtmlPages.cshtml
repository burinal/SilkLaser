@using SilkLaser.Web.Classes.Utils
@using SilkLaser.Web.Classes.Ext
@model System.Collections.Generic.List<SilkLaser.Web.Classes.Entities.HtmlPage>

@{
    ViewBag.Title = "Html страницы";
    Layout = "AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-12">
                <div class="jarviswidget" id="wid-pages-1" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" data-widget-deletebutton="false" data-widget-fullscreenbutton="false" data-widget-custombutton="false" data-widget-collapsed="false" data-widget-sortable="false">
                    <header>
                        <span class="widget-icon"><i class="fa fa-table"></i></span>
                        <h2>@ViewBag.Title</h2>
                    </header>
                    <div>
                        <!-- widget content -->
                        <div class="widget-body">
                            <p>
                                <a class="btn btn-success" href="/manage/html-pages/new">
                                    <i class="fa fa-plus"></i> <span class="hidden-mobile">Добавить новую страницу</span>
                                </a>
                            </p>
                            <table class="table table-bordered table-hover" id="events-table">
                                <thead>
                                <tr>
                                    <th>Ид</th>
                                    <th>Название</th>
                                    <th>Ссылка</th>
                                    <th>Добавлена</th>
                                    <th>Отредактирована</th>
                                    <th style="width: 45px"></th>
                                </tr>
                                </thead>
                                <tbody>
                                @if (Model.Count == 0)
                                {
                                    <tr>
                                        <td colspan="6">Не найдено страниц в системе</td>
                                    </tr>
                                }
                                else
                                {
                                    foreach (var page in Model)
                                    {
                                        <tr data-id="@page.Id">
                                            <td>
                                                @page.Id
                                            </td>
                                            <td>
                                                <a href="/manage/html-pages/@page.Id/edit" class="tip" title="Редактировать страницу @page.Title">@page.Title</a>
                                            </td>
                                            <td>
                                                <a href="/@page.Route" target="_blank">/@page.Route</a>
                                            </td>
                                            <td>
                                                <span class="tip" title="Создал: @page.CreatedBy">@ViewContext.CurrentUser().ConvertDateToTimeZone(page.DateCreated).FormatDateTime()</span>
                                            </td>
                                            <td>
                                                <span class="tip" title="Редактировал: @page.ModifiedBy">@ViewContext.CurrentUser().ConvertDateToTimeZone(page.DateModified).FormatDateTime()</span>
                                            </td>
                                            <td>
                                                <div class="btn-group">
                                                    <button class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                                                        <i class="fa fa-gear fa-lg"></i>
                                                    </button>
                                                    <ul class="dropdown-menu pull-right">
                                                        <li>
                                                            <a href="/manage/html-pages/@page.Id/edit">Редактировать</a>
                                                        </li>
                                                        <li class="divider"></li>
                                                        <li>
                                                            <a href="/manage/html-pages/@page.Id/delete" onclick="return confirm('Вы действительно хотите удалить эту страницу?')">Удалить</a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                </tbody>
                            </table>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->
            </div>
        </div>
    </div>
</div>